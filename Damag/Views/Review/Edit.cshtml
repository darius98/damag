@model Damag.Models.Review
@{
    ViewBag.Title = "Edit review";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Review"))
{
    @Html.Hidden("Id")

    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.Label("Text", "Review content")
    <br />
    @Html.Editor("Text", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.Text, "", new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-success" type="submit">Save</button>
}
