@model Damag.Models.ApplicationUser

@{
    ViewBag.Title = "Edit user";
}

<form method="post" action="/Users/Edit/@Model.Id">
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(m => m.Id)

    <br />

    <i class="glyphicon glyphicon-user"></i>
    @Html.Label("UserName", "Username", new { @class = "" })
    <br />
    @Html.EditorFor(m => m.UserName)

    <br /><br />

    <i class="glyphicon glyphicon-envelope"></i>
    @Html.Label("Email", "Email", new { @class = "" })
    <br />
    @Html.EditorFor(m => m.Email)

    <br /><br />

    <i class="glyphicon glyphicon-th-list"></i>
    <label>User role</label>
    @Html.DropDownList("newRole", new SelectList(Model.AllRoles, "Value", "Text", (string)ViewBag.userRole), null, new { @class = "form-control" })

    <br />

    <button class="btn btn-sm btn-info" type="submit">Save</button>

</form>
